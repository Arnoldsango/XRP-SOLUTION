@model IEnumerable<XrpSolutions.Models.DebtorTransactionFile>

@{
    ViewBag.Title = "Index";
}

<h2>Debtor Transaction Files</h2>


<div class="row">
    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@

    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">

            <p>
                <div class="btn btn-default"> @Html.ActionLink("Create New", "Create") </div>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DebtorsMaster.Address1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DocumentNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TransactionType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GrossTransactionValue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VatValue)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DebtorsMaster.Address1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DocumentNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransactionType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GrossTransactionValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VatValue)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.DbTransactionId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.DbTransactionId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.DbTransactionId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

@section scripts {

    @Scripts.Render("~/bundles/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#table_id').DataTable();
        });

    </script>
}

