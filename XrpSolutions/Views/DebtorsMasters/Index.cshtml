@model IEnumerable<XrpSolutions.Models.DebtorsMaster>

@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/dataTables")

<h2>Debtors Table</h2>

<div class="row">
    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
<p>
    <div class="btn btn-default"> @Html.ActionLink("Add New", "Create") </div>
</p>

<div>
    @using (Html.BeginForm())
    {
        <p>
            <b> Find by Address 1 of Debtor:</b> @Html.TextBox("searchName")
            <input class="btn-danger" , type="submit" value="Search" />
        </p>
    }
</div>


<br />
<br />


<div>
    <div>

        <div class="btn btn-danger"> @Html.ActionLink("Highest Debtor", "HigestDebtor") </div> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  <div class="btn btn-success"> @Html.ActionLink("Lowest Debtor", "LowestDebtor")</div> <br />

    </div>

</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccountCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostYearToDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.salesYearToDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th></th>
    </tr>
    <tbody>
        @if (Model.Count() == 0)
        {
            <p><b> Item Not Found!!</b></p>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CostYearToDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.salesYearToDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Balance)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.DebtorId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.DebtorId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.DebtorId })
                    </td>
                </tr>
            }
        }
    </tbody>

</table>
            </div>
        </div>
    </div>



@section scripts {

    @Scripts.Render("~/bundles/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#table_id').DataTable();
        });

    </script>
}
