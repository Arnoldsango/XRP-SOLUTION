@model IEnumerable<XrpSolutions.Models.InvoiceDetails>

@{
    ViewBag.Title = "Index";
}

<h2>Invoice Details Table</h2>


<div class="row">
    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@

    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <p>
                <div class="btn btn-default"> @Html.ActionLink("Create New", "Create") </div>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.InvoiceHeader.InvoiceNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StockMaster.StockDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InvoiceNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QtySold)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitCost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitSell)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Disc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Total)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.InvoiceHeader.InvoiceNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StockMaster.StockDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InvoiceNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QtySold)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitCost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitSell)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Disc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Total)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.InvoiceDetailsID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.InvoiceDetailsID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.InvoiceDetailsID })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

@section scripts {

    @Scripts.Render("~/bundles/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#table_id').DataTable();
        });

    </script>
}


