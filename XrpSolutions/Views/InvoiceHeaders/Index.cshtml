@model IEnumerable<XrpSolutions.Models.InvoiceHeader>

@{
    ViewBag.Title = "Index";
}

<h2>Invoice Header Table</h2>


<div class="row">
    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@

    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">

            <p>
                <div class="btn btn-default"> @Html.ActionLink("Create New", "Create") </div>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalSellexclVat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalCost)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalSellexclVat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalCost)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.InvoiceNo }) |
                            @Html.ActionLink("Details", "Details", new { id = item.InvoiceNo }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.InvoiceNo })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

@section scripts {

    @Scripts.Render("~/bundles/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#table_id').DataTable();
        });

    </script>
}

